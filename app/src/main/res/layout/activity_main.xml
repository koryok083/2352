<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“± Android Modem Controller"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#667eea"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control your device as modem"
        android:textSize="14sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service is not running"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:background="#f5f5f5"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Button: Start Service -->
    <Button
        android:id="@+id/startServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="â–¶ Start Service (Port 8080)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:cornerRadius="8dp" />

    <!-- Button: Stop Service -->
    <Button
        android:id="@+id/stopServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="â¹ Stop Service"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#f44336"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:cornerRadius="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_marginVertical="20dp" />

    <!-- Button: Open WebUI -->
    <Button
        android:id="@+id/openWebUIBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ðŸŒ Open WebUI (localhost:8080)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#667eea"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:cornerRadius="8dp" />

    <!-- Info Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f0f4ff"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:cornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ Information"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#667eea"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Start the service\n2. Service runs on port 8080\n3. Access WebUI from browser\n4. Root access recommended"
            android:textSize="12sp"
            android:textColor="#555555"
            android:lineSpacingMultiplier="1.5" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v1.0 â€¢ Android Modem App"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>
